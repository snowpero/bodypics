<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a000000"
    >

    <RelativeLayout
        android:id="@+id/rl_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/iv_transparent_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        />

    <com.github.florent37.camerafragment.widgets.RecordButton
        android:id="@+id/record_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_toggle_layer"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_btn_ui_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_gallery_show"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_picture"
            />

        <ImageView
            android:id="@+id/iv_calendar_show"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar_29"
            />

        <ImageView
            android:id="@+id/iv_pic_load_show"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_downloads"
            />

        <ImageView
            android:id="@+id/iv_pic_list_show"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_open_view"
            />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_btn_ui_area"
        app:dsb_min="0"
        app:dsb_max="100"
        />


    <RelativeLayout
        android:id="@+id/rl_fragment_stack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</android.support.constraint.ConstraintLayout>